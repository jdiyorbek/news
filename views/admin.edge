    <script>
        const navControllerOpen = document.querySelector(".nav-control-o"),
            navControllerClose = document.querySelector(".nav-control-c"),
            navigation = document.querySelector(".navigation")

        navControllerOpen.addEventListener("click", () => {
            navigation.style.top = "0"
            navControllerClose.style.top = "0"
        })

        navControllerClose.addEventListener("click", () => {
            navigation.style.top = "-100vh"
            navControllerClose.style.top = "-100vh"
        })
